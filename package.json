{
  "name": "bt-widgets",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "analyze": "yarn webpack --devtool 'source-map' && source-map-explorer './dist/**/*.js'",
    "build": "webpack",
    "build:staging": "NODE_ENV=staging yarn build",
    "build:production": "NODE_ENV=production yarn build",
    "lint": "run-s lint:js lint:css",
    "lint:js": "apollo client:download-schema && eslint --cache --fix '**/*.{js,jsx,graphql}'",
    "lint:css": "stylelint --cache '**/*.{js,jsx}'",
    "start": "yarn storybook",
    "storybook": "start-storybook -p 3000",
    "storybook:static": "build-storybook -o '.storybook/static'",
    "test": "jest src/",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "@apollo/client": "^3.3.6",
    "@babel/runtime": "^7.12.5",
    "@blue-tomato/use-retext": "^1.3.0",
    "@tippyjs/react": "^4.2.0",
    "graphql": "^15.4.0",
    "graphql-tag": "^2.11.0",
    "js-cookie": "^2.2.1",
    "lodash-es": "^4.17.15",
    "minireset.css": "^0.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.11.5",
    "react-use": "^15.3.4",
    "styled-components": "^5.1.1",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@blue-tomato/cz-jira-conventional-changelog": "^1.2.1",
    "@blue-tomato/eslint-config-react": "^2.0.3",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-viewport": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/cli": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "apollo": "^2.31.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-styled-components": "^1.12.0",
    "commitizen": "^4.2.2",
    "concat": "^1.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.14.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "msw": "^0.22.3",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "source-map-explorer": "^2.5.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.2",
    "stylelint-processor-styled-components": "^1.10.0",
    "terser-webpack-plugin": "^5.0.3",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0"
  },
  "resolutions": {
    "graphql": "^15.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "config": {
    "commitizen": {
      "path": "@blue-tomato/cz-jira-conventional-changelog"
    }
  }
}
